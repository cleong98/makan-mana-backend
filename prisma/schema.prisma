generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // for heroku using database url
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Status {
  ACTIVE
  FREEZE
}

enum Role {
  USER
  SUPERADMIN
  ADMIN
}

enum UserType {
  EMAIL
  GOOGLE
  FACEBOOK
  APPLE
}

